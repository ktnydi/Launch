<% @page_title = "フォロワー一覧" %>
<div class="follows-wrapper">
  <div class="container">
    <h3>フォロワー</h3>
    <% if @followers.present? %>
    <div class="posts-list">
    <% @followers.each do |follower| %>
      <div class="post">
        <%= image_tag gravatar_image(follower), size: 50 %>
        <div class="post-title">
          <div class="post-top">
            <h2>
              <%= link_to follower.name, user_posts_path(follower), data: { "turbolinks": false } %>
            </h2>
          </div>
        </div>
        <div class="follow" id="<%= follower.id %>">
          <%= render "follows/follow", other: follower %>
        </div>
      </div>
    <% end %>
    </div>
      <div class="paginate">
        <%= link_to_prev_page @followers, "前のページへ", class: "prev-page", data: { "turbolinks" => false } %>
        <%= link_to_next_page @followers, "次のページへ", class: "next-page", data: { "turbolinks" => false } %>
      </div>
    <% else %>
      <div class="notfind">
        <p>フォロワーが見つかりませんでした。</p>
      </div>
    <% end %>
  </div>
</div>
