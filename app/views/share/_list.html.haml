.posts-list
  - if objs.present?
    - objs.each do |obj|
      .list
        = image_tag gravatar_image(obj.user), size: 50
        .post-title
          .post-top
            %h2
              = link_to obj.title, post_path(obj), data: { "turbolinks": false }
            %p
              = markdown(obj.content).gsub!(/(<.*?>|")/, "").truncate(200)
          .post-bottom
            .left
              %span.heart
                - if current_user && obj.likes.find_by(user_id: current_user.id)
                  %i.material-icons.favorite favorite
                - else
                  %i.material-icons.unfavorite favorite_border
                %span= obj.likes.count
              ・
              %span
                = obj.user.name
            %p
              = obj.created_at.strftime("%Y.%m.%d")
  - else
    .noposts
      %h2 記事がありません
      %p 開発したアプリを紹介してコメントをもらおう！
      = link_to "アプリを紹介する", new_post_path, data: { turbolinks: false }
.paginate
  = link_to_prev_page objs, "前のページへ", class: "prev-page", data: { "turbolinks" => false }
  = link_to_next_page objs, "次のページへ", class: "next-page", data: { "turbolinks" => false }
