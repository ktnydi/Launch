<script>
  var select_image = document.getElementById('select-image');
  var image_url = document.getElementById('image-url');

  select_image.addEventListener('change', function() {
    var url = select_image.value.replace(/^.*\\/, '');
    if (url.length === 0) {
      image_url.textContent = '画像を選択する';
    } else {
      image_url.textContent = url;
    }
  });
</script>
