<% @page_title = "アカウントを作成" %>
<div class="user-f-wrapper signup-wrapper">
  <div class="container">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="signup">
      <h2>アカウントを作成</h2>
      <div class="form-wrapper">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, required: true, maxlength:"15" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <span>：<%= @minimum_password_length %>文字以上
            <% end %></span>
            <div class="signup-password">
              <%= f.password_field :password, autocomplete: "new-password", required: true %>
              <div class="password-mask" id="mask">
                <i class="far fa-eye"></i>
              </div>
            </div>
          </div>

          <p class="term">
            登録が完了すると<%= link_to "利用規約", terms_path, target: :_blank %>に同意したものとみなします。
          </p>

          <div class="actions">
            <%= f.submit "登録", id: "submit", disabled: true, style: "background-color: #E0E0E0" %>
            <p>or</p>
            <%= link_to user_twitter_omniauth_authorize_path, class: "twitter" do %>
              <i class="fab fa-twitter"></i>
              Twitterで登録
            <% end %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<script>
  var mask = document.getElementById('mask');
  var password = document.getElementById('user_password');
  var submit = document.getElementById('submit');

  password.addEventListener('focus', function() {
    this.setAttribute('type', 'text');
    mask.innerHTML = '<i class="far fa-eye-slash"></i>';
  });
  password.addEventListener('blur', function() {
    this.setAttribute('type', 'password');
    mask.innerHTML = '<i class="far fa-eye"></i>';
  });

  password.addEventListener('keyup', function() {
    var password_length = this.value.length;
    if (password_length >= 6) {
      submit.removeAttribute('disabled');
      submit.style.backgroundColor = '#009688';
    } else {
      submit.setAttribute('disabled', 'disabled');
      submit.style.backgroundColor = '#E0E0E0';
    }
  });
</script>
