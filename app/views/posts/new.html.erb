<%= form_for @post do |f| %>
  <%= f.text_field :title, placeholder: "記事のタイトルを入力..." %>
  <div class="tab-bar">
    <div id="bold">bold</div>
  </div>
  <div class="editor-md">
    <%= f.text_area :content, placeholder: "Markdownで内容を書く", col: 40, rows: 30 %>
    <div class="md-preview"></div>
  </div>
  <%= f.submit "記事を公開する" %>
<% end %>

<div class="posts-wrapper">
<% @posts.each do |post| %>
  <% if post.content %>
    <div class="post">
      <% if post.title != "" %>
        <h1 class="title"><%= post.title %></h1>
      <% end %>
      <%== markdown(post.content) %>
      <%= link_to "Delete", "/posts/#{post.id}", method: :delete, data: { confirm: "本当に削除しますか？"} %>
    </div>
  <% end %>
<% end %>
</div>
