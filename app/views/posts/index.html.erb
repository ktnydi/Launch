<% if flash[:post_notice] %>
  <div class="post_notice" id="notification">
    <%= flash[:post_notice] %>
  </div>
<% end %>

<main class="posts-wrapper">
  <div class="container">
    <h1><i class="fas fa-paste"></i>記事一覧</h1>

    <div class="posts-list">
    <% @posts.each do |post| %>
      <div class="post">
        <%= image_tag "/images/users/default_user_image.png", size: 50 %>
        <div class="post-title">
          <div class="post-top">
            <h2>
              <%= link_to post.title, post_path(post), data: { "turbolinks": false } %>
            </h2>
            <p><%= truncate post.content, length: 120 %></p>
          </div>
          <div class="post-bottom">
            <span>
              <i class="far fa-heart"></i>
              123
            </span>
            <p>
              <%= post.created_at.strftime("%Y.%m.%d") %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    </div>
    <div class="paginate">
      <%= link_to_prev_page @posts, "前のページへ", class: "prev-page", data: { "turbolinks" => false } %>
      <%= link_to_next_page @posts, "次のページへ", class: "next-page", data: { "turbolinks" => false } %>
    </div>
  </div>
</main>
