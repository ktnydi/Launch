<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag '/editor/lib/codemirror.css', media: 'all' %>
    <%= stylesheet_link_tag '/editor/theme/neat.css', media: 'all' %>
    <%= stylesheet_link_tag '/editor/highlight/atom-one-dark.css', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '/editor/marked/marked.min.js' %>
    <%= javascript_include_tag '/editor/highlight/highlight.pack.js' %>

  </head>

  <body>
    <div class="wrapper">
    <%= render 'share/header' %>
    <%= yield %>
    <%= render 'share/footer' %>
    </div>

    <div class="hamburger-menu-list" id="menu" style="visibility: hidden; transition: visibility .2s">
      <nav>
        <% if user_signed_in? %>
          <div class="user-name">
            <%= image_tag "/images/users/#{current_user.image_name}", size: 35 %>
            <span><%= current_user.name %></span>
          </div>
          <div class="posts-link">
            <%= link_to "ホーム", root_path, data: { "turbolinks" => false } %>
            <%= link_to "記事一覧", posts_path, data: { "turbolinks" => false } %>
          </div>
          <div class="user-link">
            <%= link_to "ダッシュボード", user_path(current_user.id), data: { "turbolinks" => false } %>
            <%= link_to "アカウント設定", edit_user_registration_path, data: { "turbolinks" => false } %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </div>
        <% end %>
      </nav>
      <%= link_to "記事を書く", new_post_path, class: "write", data: { "turbolinks" => false } %>
    </div>
    <script>
      var hamburger = document.getElementById('hamburger');
      var menu = document.getElementById('menu');
      var body = document.getElementsByTagName('body')[0];
      var header = document.getElementById('header');

      hamburger.addEventListener('click', function() {
        var clazz = body.className;
        if (clazz === 'active') {
          body.className = '';
          header.style.right = '0';
          hamburger.innerHTML = '<i class="fas fa-bars"></i>';
          menu.style.visibility = 'hidden';
        } else {
          body.className = 'active';
          header.style.right = '70vw';
          hamburger.innerHTML = '<i class="fas fa-times"></i>';
          menu.style.visibility = 'visible';
        }
      })
    </script>
  </body>
</html>
