%form.editor_form#edit{ name: "editor_form" }
  .editor_form_markdown
    .box
      = text_field_tag :title, draft.title, placeholder: "タイトル"
    .box
      = text_field_tag :category, draft.category, placeholder: "タグを選択"
    .editor_box
      = text_area_tag :content, draft.content, placeholder: "Markdownで内容を書く", col: 40, rows: 30, class: "editor"
  .editor_footer
    .restore_message
      %span.time 0
      分前のバックアップデータがあります（
      %span.restore_btn 復元する
      ）
